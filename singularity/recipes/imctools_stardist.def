BootStrap: docker
From: ubuntu:xenial
IncludeCmd: yes

# See:
# https://github.com/CellProfiler/CellProfiler/wiki/Source-installation-%28Ubuntu-16.04-LTS%29
# https://github.com/BodenmillerGroup/ImcPluginsCP

%post

#############################################################################################################
## Prepare the containe with updates + python
##############################################################################################################

# make directory to mount the data
	mkdir /data

# Install python 3.8 

apt update
apt install -y software-properties-common
add-apt-repository ppa:deadsnakes/ppa
apt update
apt -y upgrade
apt install -y wget
apt install -y python3.8-dev python3.8-distutils

wget https://bootstrap.pypa.io/get-pip.py
python3.8 get-pip.py
rm get-pip.py

#############################################################################################################
##  Install imctools v1.0.7
##############################################################################################################
# Install imctools 
	python3.8 -m pip install --force-reinstall --upgrade pip setuptools wheel
	python3.8 -m pip install imctools==1.0.7

#############################################################################################################
##  Install Stardist v0.7.3 and tensorflow 2.6.0
##############################################################################################################
python3.8 -m pip install tensorflow==2.6.0
python3.8 -m pip install stardist==0.7.3

